<Page x:Class="NBASystem.Pages.AdminLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBASystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text=" Login">
            </TextBlock>
            <TextBox x:Name="LoginTb" ></TextBox>
            <TextBlock Text="Password"></TextBlock>
            <TextBox x:Name="PasswrodPB" ></TextBox>
            <CheckBox x:Name="CbSave" Content="Save me"></CheckBox>
            <StackPanel Orientation="Horizontal" Width="250" >
                <Button Content="Login" Width="100" x:Name="BTLogin" Click="BTLogin_Click"></Button>
                <Button Content="Cancel" Margin="50 0 0 0" Width="100" x:Name="BTCancel" Click="BTCancel_Click"></Button>
            </StackPanel>     
        </StackPanel>
        
    </Grid>
</Page>
